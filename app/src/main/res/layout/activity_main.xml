<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello Andriod"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="parent" />

    <Button
        android:id="@+id/hiButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Say Hello!"
        app:layout_constraintTop_toBottomOf="@+id/textView" />


    <Button
        android:id="@+id/andriodButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Aniod "
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/helloButton" />

    <Button
        android:id="@+id/helloButton"
        android:layout_width="149dp"
        android:layout_height="61dp"
        android:layout_marginLeft="56dp"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginBottom="428dp"
        android:text="Hello MM"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/hiButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/andriodButton" />

    <Button
        android:layout_width="187dp"
        android:layout_height="73dp"
        android:text="Hello Andriod"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="@id/helloButton"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="141dp"
        tools:ignore="MissingConstraints" />

